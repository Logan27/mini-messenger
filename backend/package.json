{
  "name": "messenger-backend",
  "version": "1.0.0",
  "description": "Secure real-time messenger backend with P2P video calling for up to 100 users",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config tests/integration/jest-integration.config.js",
    "test:integration:watch": "jest --config tests/integration/jest-integration.config.js --watch",
    "test:integration:coverage": "jest --config tests/integration/jest-integration.config.js --coverage",
    "test:all": "npm run test && npm run test:integration",
    "test:all:coverage": "npm run test:coverage && npm run test:integration:coverage",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "seed": "sequelize-cli db:seed:all",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "docker:build": "docker build -t messenger-backend .",
    "docker:run": "docker run -p 3000:3000 messenger-backend"
  },
  "keywords": [
    "messenger",
    "websocket",
    "p2p",
    "video-calling",
    "real-time",
    "nodejs",
    "express",
    "postgresql",
    "redis"
  ],
  "author": "Messenger Team",
  "license": "Proprietary",
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "clamscan": "^2.1.2",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.0.0",
    "helmet-csp": "^4.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "js-yaml": "^4.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "libsodium-wrappers": "^0.7.13",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.9",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "prometheus-api-metrics": "^3.2.2",
    "qrcode": "^1.5.4",
    "redis": "^4.6.7",
    "response-time": "^2.3.2",
    "sanitize-filename": "^1.6.3",
    "sequelize": "^6.32.1",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "socket.io-redis-adapter": "^8.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "@babel/preset-env": "^7.28.3",
    "@types/qrcode": "^1.5.6",
    "babel-jest": "^30.2.0",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "docker-compose": "^0.24.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "istanbul": "^0.4.5",
    "jest": "^29.6.1",
    "jest-junit": "^16.0.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^13.2.3",
    "mocha": "^10.2.0",
    "mock-require": "^3.0.3",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.0.1",
    "prettier-plugin-jsdoc": "^1.0.1",
    "proxyquire": "^2.1.3",
    "rewire": "^7.0.0",
    "rimraf": "^5.0.1",
    "sequelize-cli": "^6.6.1",
    "should": "^13.2.3",
    "sinon": "^15.2.0",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "wait-on": "^7.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**",
      "tests/**",
      "coverage/**",
      "docs/**"
    ],
    "watch": [
      "src/"
    ],
    "ext": "js, json",
    "delay": 2500
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/messenger/backend.git"
  },
  "bugs": {
    "url": "https://github.com/messenger/backend/issues"
  },
  "homepage": "https://github.com/messenger/backend#readme"
}
