# =============================================================================
# EXPO MESSENGER - ENVIRONMENT CONFIGURATION
# =============================================================================
#
# Copy this file to .env and update the values for your environment.
#
# IMPORTANT: The API URL changes depending on how you're testing:
# - Android Emulator: Use 10.0.2.2:4000 (emulator's special alias for host)
# - iOS Simulator: Use localhost:4000 (simulator uses host network)
# - Physical Device: Use your computer's local IP (e.g., 192.168.1.10:4000)
#
# To find your local IP:
#   - macOS/Linux: `ifconfig | grep "inet " | grep -v 127.0.0.1`
#   - Windows: `ipconfig` (look for IPv4 Address)
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL (HTTP)
# Default: http://localhost:4000
# Android Emulator: http://10.0.2.2:4000
# Physical Device: http://YOUR_LOCAL_IP:4000 (e.g., http://192.168.1.10:4000)
EXPO_PUBLIC_API_URL=http://localhost:4000

# Backend WebSocket URL (WS)
# Default: ws://localhost:4000
# Android Emulator: ws://10.0.2.2:4000
# Physical Device: ws://YOUR_LOCAL_IP:4000 (e.g., ws://192.168.1.10:4000)
EXPO_PUBLIC_WS_URL=ws://localhost:4000

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
# Application name displayed in the app
EXPO_PUBLIC_APP_NAME=Messenger

# Application version
EXPO_PUBLIC_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable biometric authentication (fingerprint, face ID)
EXPO_PUBLIC_ENABLE_BIOMETRIC=true

# Enable/disable push notifications
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# Enable/disable voice/video calls
EXPO_PUBLIC_ENABLE_CALLS=true

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file size in bytes (default: 10MB = 10485760 bytes)
# 1MB = 1048576 bytes
# 5MB = 5242880 bytes
# 10MB = 10485760 bytes
# 50MB = 52428800 bytes
EXPO_PUBLIC_MAX_FILE_SIZE=10485760

# Supported file types (comma-separated, no spaces)
# Images: jpg,jpeg,png,gif,bmp,webp
# Documents: pdf,doc,docx,xls,xlsx,ppt,pptx,txt
# Videos: mp4,mov,avi,mkv
# Audio: mp3,wav,aac,m4a
EXPO_PUBLIC_SUPPORTED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# -----------------------------------------------------------------------------
# Development & Debugging
# -----------------------------------------------------------------------------
# Enable detailed logging (true/false)
# EXPO_PUBLIC_DEBUG=false

# API request timeout in milliseconds (default: 10000 = 10 seconds)
# EXPO_PUBLIC_API_TIMEOUT=10000

# WebSocket reconnection settings
# EXPO_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5
# EXPO_PUBLIC_WS_RECONNECT_INTERVAL=1000

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

# --- For Android Emulator ---
# EXPO_PUBLIC_API_URL=http://10.0.2.2:4000
# EXPO_PUBLIC_WS_URL=ws://10.0.2.2:4000

# --- For iOS Simulator ---
# EXPO_PUBLIC_API_URL=http://localhost:4000
# EXPO_PUBLIC_WS_URL=ws://localhost:4000

# --- For Physical Device (update with your local IP) ---
# EXPO_PUBLIC_API_URL=http://192.168.1.10:4000
# EXPO_PUBLIC_WS_URL=ws://192.168.1.10:4000

# --- For Production (update with your production domain) ---
# EXPO_PUBLIC_API_URL=https://api.messenger.app
# EXPO_PUBLIC_WS_URL=wss://api.messenger.app
